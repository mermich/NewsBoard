@model GroupVMList


<div class="panel panel-default">
    <div class="panel-heading">
        Les Groupes
    </div>

    <a href="#" action="@Url.NewsBoardUrlHelper().Action("Group", "GroupList", "GetCreate")"
       actiondata="" type="button" name="simpleGetAction">
        Creer un nouveau Groupe
    </a>


    <div class="panel-body" style="padding:0px">
        <table class="table table-striped table-condensed">
            <tbody>
                @for (int i = 0; i < Model.Groups.Count; i++)
                {
                    <tr>
                        <td>@Model.Groups[i].Label</td>
                        <td>
                            <div class="btn-group" role="group">
                                <button class="btn btn-info btn-sm"
                                        action="@Url.NewsBoardUrlHelper().Action("Group", "GroupList", "GetEdit", new { groupId=Model.Groups[i].Id})"
                                        actiondata="" type="button" name="simpleGetAction">
                                    Editer
                                </button>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <a href="#" action="@Url.NewsBoardUrlHelper().Action("Group", "GroupList", "GetCreate")"
       actiondata="" type="button" name="simpleGetAction">
        Creer un nouveau Groupe
    </a>
</div>


