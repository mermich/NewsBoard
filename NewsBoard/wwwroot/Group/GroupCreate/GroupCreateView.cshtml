@model GroupEditVM


<div class="panel panel-default">
    <div class="panel-heading">
        Creation d'un Groupe
    </div>

    <div class="panel-body panel-edit">

        <div class="form-horizontal">

            <div class="form-group">
                <label for="Label" class="col-sm-2 control-label">Nom du Groupe</label>
                <div class="col-sm-6">
                    <input type="text" class="form-control" id="Label" name="Label" value="@Model.Label" placeholder="Non du Groupe">
                </div>
            </div>

            <div class="form-group">
                <label class="col-sm-2 control-label">Roles associes</label>


                <div class="col-sm-10">
                    @for (int i = 0; i < Model.Permissions.Items.Count; i++)
                    {
                        var idName = "Permissions.Items[" + i + "].Id";
                        var isSelectedName = "Permissions.Items[" + i + "].IsSelected";
                        <div class="checkbox">
                            <label>
                                <input type="hidden" name="@idName" value="@Model.Permissions.Items[i].Id" />
                                <input type="checkbox" name="@isSelectedName" value="true" @(@Model.Permissions.Items[i].IsSelected ? "checked=\"checked\"" : "") />
                                @Model.Permissions.Items[i].Label
                            </label>
                        </div>
                    }
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button class="btn btn-info"
                            action="@Url.NewsBoardUrlHelper().Action("Group", "GroupCreate", "Create")"
                            actiondata="" type="button" name="simplePostAction">
                        Creer
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>
