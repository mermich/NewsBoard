@model TagVMList


<div class="panel panel-default">
    <div class="panel-heading">
        Les tags
    </div>

    <a class="btn btn-info btn-sm" href="#" ns-action-url="@Url.NewsBoardUrlHelper().Action("Tag", "TagList", "GetCreate")"
       type="button" ns-action-type="simpleGetAction">
        Creer un nouveau tag
    </a>


    <div class="panel-body" style="padding:0px">
        <table class="table table-striped table-condensed">
            <thead>
                <tr>
                    <th>Label</th>
                    <th>HitCount</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.Tags.Count; i++)
                {
                    <tr>
                        <td>@Model.Tags[i].Label</td>
                        <td>@Model.Tags[i].HitCount</td>

                        <td>
                            <div class="btn-group" role="group">
                                <button class="btn btn-info btn-sm"
                                        ns-action-url="@Url.NewsBoardUrlHelper().Action("Tag", "TagList", "GetEdit", new { tagId=Model.Tags[i].Id})"
                                        type="button" ns-action-type="simpleGetAction">
                                    Editer
                                </button>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <a class="btn btn-info btn-sm" href="#" ns-action-url="@Url.NewsBoardUrlHelper().Action("Tag", "TagList", "GetCreate")"
       type="button" ns-action-type="simpleGetAction">
        Creer un nouveau tag
    </a>
</div>


