@model TagEditVM

<div class="panel panel-default">
    <div class="panel-heading">
        Editer un tag
    </div>

    <div class="panel-body panel-edit">

        <div class="form-horizontal">
            <input type="hidden" name="Id" value="@Model.Id" />

            <div class="form-group">
                <label for="Label" class="col-sm-2 control-label">Non du tag</label>
                <div class="col-sm-6">
                    <input type="text" class="form-control" id="Label" name="Label" value="@Model.Label" placeholder="Non du tag">
                </div>
            </div>

            <div class="form-group">
                <label class="col-sm-2 control-label" for="Enabled">Actif</label>
                <div class="col-sm-10">
                    <div class="checkbox">
                        <label>
                            <input type="hidden" id="Enabled" name="Enabled" value="@Model.Enabled" />
                            <input type="checkbox" name="Enabled" value="true" @(@Model.Enabled ? "checked=\"checked\"" : "") />
                        </label>
                    </div>
                </div>
            </div>


            <div class="form-group">
                <div class="col-sm-10">
                    <div class="col-sm-offset-2 col-sm-10">
                        <button class="btn btn-info"
                                action="@Url.NewsBoardUrlHelper().Action("Tag", "TagEdit", "Update")"
                                actiondata="" type="button" name="simplePostAction">
                            Update
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>