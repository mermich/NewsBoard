@model NewsBoard.wwwroot.Feed.FeedAdd.FeedAddPreview


<div class="panel panel-default">
    <div class="panel-heading">
        @Model.WebSiteDetails.PageTitle : <a href="@Model.WebSiteDetails.PageAdress">@Model.WebSiteDetails.PageAdress</a>
        <input type="hidden" name="SyndicationAdress" value="@Model.WebSiteDetails.SyndicationAdress" />
    </div>

    <div class="panel-body" style="padding:0px">
        <table class="table table-striped table-condensed">
            <tbody>
                @for (int i = 0; i < Model.SyndicationContent.Items.Count; i++)
                {
                    <tr>
                        <td>@Model.SyndicationContent.Items[i].Title<br />@Model.SyndicationContent.Items[i].Content</td>
                    </tr>
                }
                <tr>
                    <td>
                        <button class="btn btn-info"
                                ns-action-url="@Url.NewsBoardUrlHelper().Action("Feed", "FeedAdd", "CreateSubscription")"
                                type="button" ns-action-type="simplePostAction">
                            Ajouter ce flux
                        </button>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
</div>
