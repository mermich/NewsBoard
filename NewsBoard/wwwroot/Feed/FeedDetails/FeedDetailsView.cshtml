@model FeedVM


<div class="panel panel-default">
    <div class="panel-heading">
        @Model.Title
    </div>
    <div class="panel-body">
        Id: @Html.DisplayFor(m => Model.Id)<br />
        Title: @Html.DisplayFor(m => Model.Title)<br />
        Description: @Html.DisplayFor(m => Model.Description)<br />
        WebSiteUrl: @Html.DisplayFor(m => Model.WebSiteUrl)<br />
        SyndicationUrl: @Html.DisplayFor(m => Model.SyndicationUrl)<br />
        Subscribers: @Html.DisplayFor(m => Model.Subscribers)<br />

        <div>
            <div class="btn-group" role="group">
                <button class="btn btn-info btn-sm"
                        action="@Url.NewsBoardUrlHelper().Action("Feed", "FeedDetails", "RefreshFeed", new { feedId=Model.Id})"
                        actiondata="" type="button" name="simpleGetAction">
                    Refresh
                </button>
                <button type="button" class="btn btn-sm btn-info dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    <span class="caret"></span> <span class="sr-only">Toggle Dropdown</span>
                </button>


                <ul class="dropdown-menu">
                    <li>
                        <a href="#" action="@Url.NewsBoardUrlHelper().Action("Feed", "FeedDetails", "Subscribe", new {feedId = Model.Id })"
                           actiondata="" type="button" name="simpleGetAction">
                            S'abonner
                        </a>
                    </li>
                    <li>
                        <a href="#" action="@Url.NewsBoardUrlHelper().Action("Feed", "FeedDetails", "Unsubscribe", new {feedId = Model.Id })"
                           actiondata="" type="button" name="simpleGetAction">
                            Se desabonner
                        </a>
                    </li>
                    <li>
                        <a href="#" action="@Url.NewsBoardUrlHelper().Action("Feed", "FeedDetails", "Report", new {feedId = Model.Id })"
                           actiondata="" type="button" name="simpleGetAction">
                            Report
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>

<div class="panel panel-default">
    <div class="panel-heading">
        Articles recents
    </div>
    <div class="panel-body" style="padding:0px">
        <table class="table table-striped table-condensed">
            <tbody>
                @for (int i = 0; i < Model.ArticleVMList.Articles.Count; i++)
                {
                    <tr><td>@Model.ArticleVMList.Articles[i].Label</td></tr>
                }
            </tbody>
        </table>
    </div>
</div>
