@model FeedEditVM


<div class="panel panel-default">
    <div class="panel-heading">
        Flux disponibles
    </div>

    <div class="panel-body" style="padding:0px">
        <table class="table table-striped">
            <tbody>
                <tr>
                    <td>
                        <div class="btn-group" role="group">
                            <button class="btn btn-info btn-sm"
                                    action="@Url.NewsBoardUrlHelper().Action("Feed", "FeedDetails", "Subscribe", new {feedId = Model.Id })"
                                    actiondata="" type="button" name="simpleGetAction">
                                S'abonner
                            </button>
                            <button type="button" class="btn btn-sm btn-info dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <span class="caret"></span> <span class="sr-only">Toggle Dropdown</span>
                            </button>


                            <ul class="dropdown-menu">
                                <li>
                                    <a href="#" action="@Url.NewsBoardUrlHelper().Action("Feed", "FeedDetails", "Unsubscribe", new {feedId = Model.Id })"
                                       actiondata="" type="button" name="simpleGetAction">
                                        Se desabonner
                                    </a>
                                </li>
                                <li>
                                    <a href="#" action="@Url.NewsBoardUrlHelper().Action("Feed", "FeedDetails", "OpenDetails", new {feedId = Model.Id })"
                                       actiondata="" type="button" name="simpleGetAction">
                                        Masquer
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
</div>