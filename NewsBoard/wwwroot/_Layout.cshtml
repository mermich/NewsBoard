<!DOCTYPE html>
<html>
<head>
    <title>NewsBoard</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>

    <!--External ressources-->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/2.2.4/jquery.js"></script>
    <link href="http://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap-theme.min.css" integrity="sha384-rHyoN1iRsVXV4nD0JutlnGaslCJuC7uwjduW9SVrLvRYooPp2bWYgmgJQIXwl/Sp" crossorigin="anonymous">
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>


    <!--Our stuff-->
    <link href="~/lib/site.css" rel="stylesheet" />
    <script src="~/lib/toastr/bootstrap-notify.js"></script>
    <link href="~/lib/bootstrap-switch/bootstrap-switch.css" rel="stylesheet" />
    <script src="~/lib/bootstrap-switch/bootstrap-switch.js"></script>
    <script src="~/lib/scripts.js"></script>

    <!--Let browser know website is optimized for mobile-->
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    @RenderSection("scripts", required: false)

</head>
<body class="body" y>
    <nav class="navbar navbar-fixed-top">
        <div class="container-fluid">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="~/">Accueil</a>
            </div>

            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav">
                    <li><a href="~/User/UserSubscription">Mes abonnements</a></li>
                    <li><a href="~/Article/ArticleList">Liste des articles</a></li>
                    <li><a href="~/Feed/FeedList">List des Flux</a></li>
                    <li><a href="~/Feed/FeedAdd">Ajouter un flux</a></li>
                    <li><a href="~/About/About">About me</a></li>
                    <li class="dropdown">
                        <a data-toggle="dropdown" class="dropdown-toggle" role="button" aria-haspopup="true" aria-expanded="false">Admin<span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li><a href="~/Controls/Checkbox">Checkbox</a></li>
                            <li><a href="~/Controls/InputText">InputText</a></li>
                            <li><a href="~/Controls/BasicCard">BasicCard</a></li>
                            <li><a href="~/Controls/Loop">Loop</a></li>
                            <li><a href="~/Controls/CustomJsonResult">CustomJsonResult</a></li>
                        </ul>
                    </li>

                </ul>

                <ul class="nav navbar-nav navbar-right">
                    <li><a href="~/User/UserLogin">Login</a></li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="page-header">
        <h1 class="h1-header">News Board  <small>Le premier agrégateur de <b>communautaire</b> sites</small></h1>
    </div>

    <div class="container">
        @RenderSection("featured", required: false)
        <div class="row">
            <div class="col-md-9">
                <form action="/" method="post">
                    <section id="page" class="content-wrapper main-content clear-fix">
                        @RenderBody()
                    </section>
                </form>
            </div>
            <div class="col-md-3">
                <asyncLoader url="@Url.NewsBoardUrlHelper().Action("Tag","TagCloud","Index")">
                    Chargement du widget ...
                    <div class='loader'></div>
                </asyncLoader>
            </div>
        </div>
    </div>
    <iframe id="siteloader" style="display:none"></iframe>
</body>
</html>