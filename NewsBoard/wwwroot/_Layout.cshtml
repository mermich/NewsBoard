<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <link href="~/lib/site.css" rel="stylesheet" />

    <!--Import Google Icon Font-->
    <link href="http://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">

    <!--Import bootstrap.css-->
    <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
    <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
    <script src="~/lib/toastr/bootstrap-notify.js"></script>

    <link href="~/lib/bootstrap-switch/bootstrap-switch.css" rel="stylesheet" />
    <script src="~/lib/bootstrap-switch/bootstrap-switch.js"></script>

    <script src="~/lib/scripts.js"></script>
    <!--Let browser know website is optimized for mobile-->
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    @RenderSection("scripts", required: false)
</head>
<body class="body" y>
    <nav class="navbar navbar-inverse">
        <div class="container-fluid">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="~/">Accueil</a>
            </div>

            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav">
                    <li class="dropdown">
                        <a data-toggle="dropdown" class="dropdown-toggle" role="button" aria-haspopup="true" aria-expanded="false">Pages<span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li><a href="~/Feed/FeedList">Feed List</a></li>
                            <li><a href="~/Feed/FeedAdd">FeedAdd</a></li>
                            <li><a href="~/Article/ArticleList">Liste des articles</a></li>
                            <li><a href="~/User/UserSubscription">Liste des articles de mes abonnements</a></li>
                        </ul>
                    </li>

                    <li class="dropdown">
                        <a data-toggle="dropdown" class="dropdown-toggle" role="button" aria-haspopup="true" aria-expanded="false">Test des controles<span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li><a href="~/Controls/Checkbox">Checkbox</a></li>
                            <li><a href="~/Controls/InputText">InputText</a></li>
                            <li><a href="~/Controls/BasicCard">BasicCard</a></li>
                            <li><a href="~/Controls/Loop">Loop</a></li>
                            <li><a href="~/Controls/CustomJsonResult">CustomJsonResult</a></li>
                        </ul>
                    </li>

                </ul>

                <ul class="nav navbar-nav navbar-right">
                    <li><a href="~/#/User/Login">Do some login</a></li>
                </ul>
            </div>
        </div>
    </nav>


    <div class="container">
        <div class="page-header">
            <h1>News Board  <small>Le premier agrégateur de news communautaire</small></h1>
        </div>

        @RenderSection("featured", required: false)
        <div class="row">
            <div class="col-md-9">
                <form action="/" method="post">
                    <section id="page" class="content-wrapper main-content clear-fix">
                        @RenderBody()
                    </section>
                </form>
            </div>
            <div class="col-md-3">
                <asyncLoader url="@Url.NewsBoardUrlHelper().Action("Tag","TagCloud","Index")">
                    Chargement du widget ...
                    <div class='loader'></div>
                </asyncLoader>
            </div>
        </div>
        <iframe id="siteloader" style="display:none"></iframe>
</body>
</html>