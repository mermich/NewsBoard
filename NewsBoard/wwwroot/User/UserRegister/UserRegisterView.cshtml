@model UserRegisterVM


<div class="panel panel-default">
    <div class="panel-heading">
        Se creer un compte
    </div>

    <div class="panel-body panel-edit">

        <div class="form-horizontal">

            <div class="form-group">
                <label for="Email" class="col-sm-2 control-label">Email</label>
                <div class="col-sm-6">
                    <input type="text" class="form-control" id="Email" name="Email" value="@Model.Email" placeholder="Email">
                </div>
            </div>

            <div class="form-group">
                <label class="col-sm-2 control-label" for="Password">Password</label>
                <div class="col-sm-6">
                    <input type="password" class="form-control" name="Password" value="@Model.Password" />
                </div>
            </div>


            <div class="form-group">
                <div class="col-sm-10">
                    <div class="col-sm-offset-2 col-sm-10">
                        <button class="btn btn-info"
                                action="@Url.NewsBoardUrlHelper().Action("User", "UserRegister", "Register")"
                                actiondata="" type="button" name="simplePostAction">
                            Register
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>