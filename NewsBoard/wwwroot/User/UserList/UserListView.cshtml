@model UserVMList


<div class="panel panel-default">
    <div class="panel-heading">
        Utilisateurs
    </div>

    <h1>TO DO CREATE / UPDATE SCREENS</h1>

    <a class="btn btn-info btn-sm" href="#" ns-action-url="@Url.NewsBoardUrlHelper().Action("User", "UserList", "GetCreate")"
       type="button" ns-action-type="simpleGetAction">
        Creer un nouvel utilisateur
    </a>


    <div class="panel-body" style="padding:0px">
        <table class="table table-striped table-condensed">
            <thead>
                <tr>
                    <th>Email</th>
                    <th>Groups</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.Users.Count; i++)
                {
                    <tr>
                        <td>@Model.Users[i].Email</td>
                        <td>@Model.Users[i].GroupString</td>
                        <td>
                            <div class="btn-group" role="group">
                                <button class="btn btn-info btn-sm"
                                        ns-action-url="@Url.NewsBoardUrlHelper().Action("User", "UserList", "GetEdit", new { userId=Model.Users[i].Id})"
                                        type="button" ns-action-type="simpleGetAction">
                                    Editer
                                </button>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <a class="btn btn-info btn-sm" href="#" ns-action-url="@Url.NewsBoardUrlHelper().Action("User", "UserList", "GetCreate")"
       type="button" ns-action-type="simpleGetAction">
        Creer un nouvel utilisateur
    </a>
</div>


