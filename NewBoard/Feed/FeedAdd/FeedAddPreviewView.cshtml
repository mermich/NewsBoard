@model NewsBoard.wwwroot.Feed.FeedAdd.FeedAddPreview


<div class="panel panel-default">
    <div class="panel-heading">
        @Model.WebSiteDetails.Title : <a href="@Model.WebSiteDetails.Uri">@Model.WebSiteDetails.Uri</a>
        <input type="hidden" name="SyndicationUrl" value="@Model.WebSiteDetails.SyndicationUri" />
    </div>

    <div class="form-horizontal">

        <div class="panel-body panel-edit">
            <div class="form-group">
                <label for="Description" class="col-sm-2 control-label">Description</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="Description" value="@Model.WebSiteDetails.Description" name="Description" placeholder="Description">
                </div>
            </div>
            <div class="form-group">
                <label for="SyndicationUri" class="col-sm-2 control-label">SyndicationUri</label>
                <div class="col-sm-10">
                    <input type="url" class="form-control" id="SyndicationUri" value="@Model.WebSiteDetails.SyndicationUri" name="SyndicationUri" placeholder="SyndicationUri">
                </div>
            </div>
            <div class="form-group">
                <label for="Title" class="col-sm-2 control-label">Title</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="Title" value="@Model.WebSiteDetails.Title" name="Title" placeholder="Title">
                </div>
            </div>
            <div class="form-group">
                <label for="IconUri" class="col-sm-2 control-label">IconUri</label>
                <div class="col-sm-10">
                    <div class=" input-group">
                        <input type="text" class="form-control" id="IconUri" value="@Model.WebSiteDetails.IconUri" name="IconUri" placeholder="IconUri">
                        <span class="input-group-addon" alt="website icon" style="background-image: url(@Model.WebSiteDetails.IconUri); background-size: contain; background-repeat-x: no-repeat; background-repeat-y: no-repeat; background-position: center;"></span>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label for="Uri" class="col-sm-2 control-label">WebSiteUrl</label>
                <div class="col-sm-10">
                    <input type="url" class="form-control" id="Uri" value="@Model.WebSiteDetails.Uri" name="Uri" placeholder="Uri">
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-2 control-label"></label>
                <button class="btn btn-info"
                        href="@Url.NewsBoardUrlHelper().Action("Feed", "FeedAdd", "CreateSubscription")"
                        type="button" ns-action-type="simplePostAction">
                    Ajouter ce flux
                </button>
            </div>
        </div>
        <table class="table table-striped table-condensed">
            <tbody>
                @for (int i = 0; i < Model.SyndicationContent.Items.Count; i++)
                {
                    <tr>
                        <td>@Model.SyndicationContent.Items[i].Title<br />@Model.SyndicationContent.Items[i].Content</td>
                    </tr>
                }
                <tr>
                    <td>
                        <button class="btn btn-info"
                                href="@Url.NewsBoardUrlHelper().Action("Feed", "FeedAdd", "CreateSubscription")"
                                type="button" ns-action-type="simplePostAction">
                            Ajouter ce flux
                        </button>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>

</div>