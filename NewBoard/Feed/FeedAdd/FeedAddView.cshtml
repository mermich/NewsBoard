<div class="panel panel-default">
    <div class="panel-heading">
        Ajouter un site a l'annuaire
    </div>

    <div class="panel-body panel-edit">

        <div class="form-horizontal">

            <div class="form-group">
                <label for="urlToDiscover" class="col-sm-2 control-label">Adresse du site</label>
                <div class="col-sm-6">
                    <input type="url" class="form-control" id="urlToDiscover" name="urlToDiscover">
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-10">
                    <div class="col-sm-offset-2 col-sm-10">
                        <button class="btn btn-info"
                                href="@Url.NewsBoardUrlHelper().Action("Feed", "FeedAdd", "GetPreview")"
                                type="button" ns-action-type="simplePostAction">
                            Afficher la previsualisation
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div id="preview"></div>

