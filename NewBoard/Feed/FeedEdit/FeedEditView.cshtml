@model FeedEditVM


<div class="panel panel-default">
    <div class="panel-heading">
        Edition du flux : @Model.Title
    </div>

    <div class="panel-body panel-edit">
        <input type="hidden" name="Id" value="@Model.Id" />

        <div class="form-horizontal">
            <div class="form-group">
                <label for="Description" class="col-sm-2 control-label">Description</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="Description" value="@Model.Description" name="Description" placeholder="Description">
                </div>
            </div>
            <div class="form-group">
                <label for="SyndicationUrl" class="col-sm-2 control-label">SyndicationUrl</label>
                <div class="col-sm-10">
                    <input type="url" class="form-control" id="SyndicationUrl" value="@Model.SyndicationUrl" name="SyndicationUrl" placeholder="SyndicationUrl">
                </div>
            </div>
            <div class="form-group">
                <label for="Title" class="col-sm-2 control-label">Title</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="Title"value="@Model.Title"  name="Title" placeholder="Title">
                </div>
            </div>
            <div class="form-group">
                <label for="Title" class="col-sm-2 control-label">IconUrl</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="Title" value="@Model.IconUrl" name="IconUrl" placeholder="IconUrl">
                </div>
            </div>
            <div class="form-group">
                <label for="WebSiteUrl" class="col-sm-2 control-label">WebSiteUrl</label>
                <div class="col-sm-10">
                    <input type="url" class="form-control" id="WebSiteUrl" value="@Model.WebSiteUrl"  name="WebSiteUrl" placeholder="WebSiteUrl">
                </div>
            </div>

            <div class="form-group">
                <label class="col-sm-2 control-label">Tags associes</label>


                <div class="col-sm-10">
                    @for (int i = 0; i < Model.Tags.Items.Count; i++)
                    {
                        var idName = "Tags.Items[" + i + "].Value";
                        var isSelectedName = "Tags.Items[" + i + "].IsSelected";
                        <div class="checkbox">
                            <label>
                                <input type="hidden" name="@idName" value="@Model.Tags.Items[i].Value" />
                                <input type="checkbox" name="@isSelectedName" value="true" @(@Model.Tags.Items[i].IsSelected ? "checked=\"checked\"" : "") />
                                @Model.Tags.Items[i].Label
                            </label>
                        </div>
                    }
                </div>

            </div>

            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button class="btn btn-info"
                            ns-action-url="@Url.NewsBoardUrlHelper().Action("Feed", "FeedEdit", "Update")"
                            type="button" ns-action-type="simplePostAction">
                        Update
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>