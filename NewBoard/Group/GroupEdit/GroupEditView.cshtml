@model GroupEditVM

<div class="panel panel-default">
    <div class="panel-heading">
        Editer un Groupe
    </div>

    <div class="panel-body panel-edit">

        <div class="form-horizontal">
            <input type="hidden" name="Id" value="@Model.Id" />

            <div class="form-group">
                <label for="Label" class="col-sm-2 control-label">Nom du Groupe</label>
                <div class="col-sm-6">
                    <input type="text" class="form-control" id="Label" name="Label" value="@Model.Label" placeholder="Non du tag">
                </div>
            </div>

            <div class="form-group">
                <label class="col-sm-2 control-label">Roles associes</label>
                <div class="col-sm-10">
                    @Html.Raw(Html.CheckBoxListFor(m => m.Permissions))
                </div>
            </div>


            <div class="form-group">
                <div class="col-sm-10">
                    <div class="col-sm-offset-2 col-sm-10">
                        <button class="btn btn-info"
                                href="@Url.NewsBoardUrlHelper().Action("Group", "GroupEdit", "Update")"
                                type="button" ns-action-type="simplePostAction">
                            Update
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>