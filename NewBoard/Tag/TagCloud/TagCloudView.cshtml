@model TagVMList


<div class="panel panel-default">
    <div class="panel-heading">
        Tags
    </div>

    <div class="panel-body">
        @for (int i = 0; i < Model.Tags.Count; i++)
        {
            <button type="button"
                    class="btn btn-info btn-xs"
                    href="@Url.NewsBoardUrlHelper().Action("Tag", "TagCloud", "GetArticlesByTag", new { Id=Model.Tags[i].Id})"
                    ns-action-type="simpleGetAction"
                    aria-haspopup="true"
                    aria-expanded="false">
                @Model.Tags[i].Label
            </button>
        }
    </div>
</div>


