<!DOCTYPE html>
<html>
<head>
    <title>NewsBoard</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>

    <!--External ressources-->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/2.2.4/jquery.js"></script>
    <link href="http://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap-theme.min.css" integrity="sha384-rHyoN1iRsVXV4nD0JutlnGaslCJuC7uwjduW9SVrLvRYooPp2bWYgmgJQIXwl/Sp" crossorigin="anonymous">
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>


    <!--Our stuff-->
    <link href="~/lib/site.css" rel="stylesheet" />
    <script src="~/lib/toastr/bootstrap-notify.js"></script>
    <link href="~/lib/bootstrap-switch/bootstrap-switch.css" rel="stylesheet" />
    <script src="~/lib/bootstrap-switch/bootstrap-switch.js"></script>
    <script src="~/lib/scripts.js"></script>

    <!--Let browser know website is optimized for mobile-->
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    @RenderSection("scripts", required: false)

</head>
<body class="body">
    <nav class="navbar navbar-fixed-top">
        <div class="container-fluid">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="~/">Accueil</a>
            </div>
        </div>
    </nav>

    <div class="page-header">
        <h1 class="h1-header">DiscoSite  <small>Decouvrez les infos d'un site</small></h1>
    </div>

    <div class="container">
        <div class="row">
            <div class="col-md-9">
                <form action="/" method="post">
                    <section id="page" class="content-wrapper main-content clear-fix">
                        @RenderBody()
                    </section>
                </form>
            </div>
        </div>
    </div>
</body>
</html>